<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onExitAction" text="Exit"/>
         </Menu>
      </MenuBar>
   </top>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
               <Tab text="Settings">
                  <HBox>
                     <padding>
                        <Insets bottom="5.0" left="10.0" top="5.0"/>
                     </padding>
                     <Label text="Listening port">
                        <HBox.margin>
                           <Insets top="4.0"/>
                        </HBox.margin>
                     </Label>
                     <TextField fx:id="inputPort" prefHeight="23.0" prefWidth="70.0" promptText="port"
                                text="8081">
                        <HBox.margin>
                           <Insets left="5.0"/>
                        </HBox.margin>
                     </TextField>
                     <ToggleButton fx:id="btnStartStop" mnemonicParsing="false"
                                   onMouseClicked="#onStartStopClicked" prefHeight="23.0" prefWidth="60.0"
                                   text="Start">
                        <HBox.margin>
                           <Insets left="5.0"/>
                        </HBox.margin>
                     </ToggleButton>
                     <Label text="Log level">
                        <HBox.margin>
                           <Insets left="10.0" top="4.0"/>
                        </HBox.margin>
                     </Label>
                     <ChoiceBox fx:id="choiceLogLevel">
                        <HBox.margin>
                           <Insets left="5.0"/>
                        </HBox.margin>
                     </ChoiceBox>
                  </HBox>
               </Tab>
            </TabPane>
         </top>
         <center>
            <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
               <Tab text="Logs">
                  <AnchorPane minHeight="0.0" minWidth="0.0">
                     <TextArea fx:id="textLogs" editable="false" layoutX="100.0" layoutY="35.0"
                               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                               AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <font>
                           <Font name="Consolas" size="12.0"/>
                        </font>
                     </TextArea>
                  </AnchorPane>
               </Tab>
            </TabPane>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <Pane BorderPane.alignment="CENTER">
         <Label text="BrainFuck Server v1.0">
            <padding>
               <Insets bottom="5.0" left="10.0" top="5.0"/>
            </padding>
         </Label>
      </Pane>
   </bottom>
</BorderPane>
