<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="文件">
                <MenuItem mnemonicParsing="false" onAction="#onExitAction" text="退出程序"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <BorderPane>
            <top>
                <TabPane tabClosingPolicy="UNAVAILABLE">
                    <Tab text="配置">
                        <VBox>
                            <HBox>
                                <padding>
                                    <Insets bottom="5.0" left="10.0" top="5.0"/>
                                </padding>
                                <Label text="监听端口">
                                    <HBox.margin>
                                        <Insets top="4.0"/>
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="inputPort" prefHeight="23.0" prefWidth="70.0" promptText="port"
                                           text="8081">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </TextField>
                                <ToggleButton fx:id="btnStartStop" mnemonicParsing="false"
                                              onMouseClicked="#onStartStopClicked" prefHeight="23.0" prefWidth="60.0"
                                              text="开始">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </ToggleButton>
                                <Label text="日志等级">
                                    <HBox.margin>
                                        <Insets left="10.0" top="4.0"/>
                                    </HBox.margin>
                                </Label>
                                <ChoiceBox fx:id="choiceLogLevel">
                                    <HBox.margin>
                                        <Insets left="5.0"/>
                                    </HBox.margin>
                                </ChoiceBox>
                            </HBox>
                            <HBox>
                                <VBox.margin>
                                    <Insets bottom="5.0"/>
                                </VBox.margin>
                                <Button mnemonicParsing="false" onAction="#onUserManageClicked" text="用户管理">
                                    <HBox.margin>
                                        <Insets left="10.0"/>
                                    </HBox.margin>
                                </Button>
                            </HBox>
                        </VBox>
                    </Tab>
                </TabPane>
            </top>
            <center>
                <TabPane tabClosingPolicy="UNAVAILABLE">
                    <Tab text="日志">
                        <TextArea fx:id="textLogs" editable="false">
                            <font>
                                <Font name="Consolas" size="12.0"/>
                            </font>
                        </TextArea>
                    </Tab>
                </TabPane>
            </center>
        </BorderPane>
    </center>
    <bottom>
        <Pane>
            <Label text="操脑服务器端 版本1.0">
                <padding>
                    <Insets bottom="5.0" left="10.0" top="5.0"/>
                </padding>
            </Label>
        </Pane>
    </bottom>
</BorderPane>
