<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ListView fx:id="userList" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ListView>
   </center>
   <bottom>
       <VBox BorderPane.alignment="CENTER">
           <BorderPane.margin>
               <Insets left="10.0" right="10.0"/>
           </BorderPane.margin>
           <HBox alignment="TOP_RIGHT">
               <VBox.margin>
                   <Insets bottom="5.0"/>
               </VBox.margin>
               <Button fx:id="btnDelete" disable="true" mnemonicParsing="false" onAction="#onDeleteAction"
                       text="Delete">
                   <HBox.margin>
                       <Insets right="10.0"/>
                   </HBox.margin>
               </Button>
               <Button fx:id="btnReset" disable="true" mnemonicParsing="false" onAction="#onResetAction"
                       text="Reset Password"/>
           </HBox>
           <Separator prefWidth="200.0"/>
           <HBox alignment="TOP_RIGHT">
               <VBox.margin>
                   <Insets bottom="5.0" top="5.0"/>
               </VBox.margin>
               <GridPane prefHeight="0.0" HBox.hgrow="ALWAYS">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                   </rowConstraints>
                   <HBox.margin>
                       <Insets right="5.0"/>
                   </HBox.margin>
                   <TextField fx:id="inputUsername" promptText="Username">
                       <GridPane.margin>
                           <Insets right="2.0"/>
                       </GridPane.margin>
                   </TextField>
                   <PasswordField fx:id="inputPassword" promptText="Password" GridPane.columnIndex="1">
                       <GridPane.margin>
                           <Insets left="2.0"/>
                       </GridPane.margin>
                   </PasswordField>
               </GridPane>
               <Button mnemonicParsing="false" onAction="#onAddAction" text="Add"/>
           </HBox>
           <Separator prefWidth="200.0"/>
           <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0">
               <VBox.margin>
                   <Insets bottom="10.0" top="5.0"/>
               </VBox.margin>
               <Button cancelButton="true" mnemonicParsing="false" onAction="#onCloseAction" text="Close"/>
           </HBox>
       </VBox>
   </bottom>
</BorderPane>
