<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <HBox>
        <AnchorPane prefHeight="400.0" prefWidth="300.0">
            <Label text="选择一个文件：" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0">
                <VBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </VBox.margin>
            </Label>
            <TableView fx:id="tableFiles" onMouseClicked="#onFileClicked" AnchorPane.bottomAnchor="10.0"
                       AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="30.0">
                <columns>
                    <TableColumn prefWidth="150.0" text="文件名"/>
                    <TableColumn prefWidth="100.0" text="最新版本"/>
                </columns>
            </TableView>
        </AnchorPane>
        <Separator orientation="VERTICAL" prefHeight="200.0"/>
        <AnchorPane prefHeight="400.0" prefWidth="200.0">
            <Label text="选择一个版本：" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
                <VBox.margin>
                    <Insets left="20.0" top="20.0"/>
                </VBox.margin>
            </Label>
            <TableView fx:id="tableVersions" onMouseClicked="#onVersionClicked" AnchorPane.bottomAnchor="10.0"
                       AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="30.0">
                <columns>
                    <TableColumn prefWidth="150.0" resizable="false" text="版本"/>
                </columns>
            </TableView>
        </AnchorPane>
    </HBox>
    <Separator prefWidth="200.0"/>
    <HBox alignment="CENTER_RIGHT" prefHeight="40.0">
        <Button fx:id="btnOpen" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#onOpenAction"
                text="打开">
            <HBox.margin>
                <Insets right="10.0"/>
            </HBox.margin>
        </Button>
        <Button cancelButton="true" mnemonicParsing="false" onAction="#onCancelAction" text="取消">
            <HBox.margin>
                <Insets right="20.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
