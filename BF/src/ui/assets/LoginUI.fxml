<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="55.0" prefWidth="400.0" style="-fx-background-color: #333333;">
        <Label alignment="CENTER" text="欢迎使用 操脑集成开发环境" textFill="WHITE" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </AnchorPane>
    <Label layoutX="50.0" layoutY="71.0" text="服务器："/>
    <TextField fx:id="inputServer" layoutX="103.0" layoutY="67.0" prefWidth="250.0" promptText="服务器"/>
    <Label layoutX="28.0" layoutY="104.0" text="用户名："/>
    <TextField fx:id="inputUsername" layoutX="103.0" layoutY="100.0" onKeyPressed="#onInputKeyPressed" prefWidth="250.0"
               promptText="用户名"/>
    <Label layoutX="32.0" layoutY="137.0" text="密码："/>
    <PasswordField fx:id="inputPassword" layoutX="103.0" layoutY="133.0" onKeyPressed="#onInputKeyPressed"
                   prefWidth="250.0" promptText="密码"/>
    <CheckBox fx:id="checkRemember" layoutX="103.0" layoutY="167.0" mnemonicParsing="false" text="记住我"/>
    <Button defaultButton="true" layoutX="304.0" layoutY="163.0" mnemonicParsing="false" onAction="#onLoginAction"
            text="登录"/>
    <Label fx:id="labelStatus" layoutX="103.0" layoutY="196.0" textFill="RED">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
</Pane>
